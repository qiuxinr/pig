<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
      
       >
       
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#46a0f0"
      
       >
        
            
         <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/me"
             android:padding="20dp"/>   
            
            
            
            
            
       

        <Button
            android:id="@+id/denglu2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dip"
            android:text="登录"
           
            
           />
        
         </LinearLayout>
        
        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="30dp"
           >
            <TextView  
                android:layout_width="0dp"              
                android:layout_height="match_parent" 
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/sbingli"
                 android:textSize="15dip"
                android:text="我的挂号"/>
            
            <TextView  
                android:layout_width="0dp" 
                  android:layout_weight="1"            
                android:layout_height="match_parent" 
                android:gravity="center"
                android:drawableTop="@drawable/wodoc"
                 android:textSize="15dip"
                android:text="我的医生"/>
            
            
            <TextView  
                android:layout_width="0dp"  
                  android:layout_weight="1"            
                android:layout_height="match_parent" 
                android:gravity="center"
                android:drawableTop="@drawable/pingjia"
                 android:textSize="15dip"
                android:text="我的评价"/>                
           
       </LinearLayout>
       
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="18dip"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableLeft="@drawable/shezhi"
            android:drawableRight="@drawable/ic_arrow"/>
        
       
        
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上传病历"
            android:textSize="18dip"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawableLeft="@drawable/bl"
            android:drawableRight="@drawable/ic_arrow"/>
        
        
        
        
        
        
        
        
    </LinearLayout>
    

</ScrollView>
